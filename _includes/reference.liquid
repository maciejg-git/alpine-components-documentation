<div class="bg-neutral-100 mt-6 px-4 py-2 rounded-md">
  {%- for prop in props -%}
    <div class="py-2">
      <div class="flex">
        <code class="text-base ml-4">
          {{ prop.name }}
        </code>
        <code class="text-red-600 ml-auto font-semibold">
          {{ prop.default }}
        </code>
        <code class="bg-red-300 rounded-md px-2 mx-1 ml-4 self-center">
          {{ prop.type }}
        </code>
      </div>
<div class="ml-[200px] my-1">

{{ prop.description }}

</div>
    </div>
    {% if forloop.last == false %}
      <hr class="border-neutral-200">
    {% endif %}
  {%- endfor -%}
</div>
