<div class="example">
  <div class="bg-neutral-50 p-2 pl-6 pr-2 font-semibold border-b border-neutral-300 dark:bg-[#212121] dark:border-neutral-700">
    <div class="flex justify-between">
      Example
      <button x-data @click="() => {
          let text = document.querySelector('#{{ tabs[0].name | append: tabs[0].label }}').textContent
          navigator.clipboard.writeText(text)
        }">
        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" class="w-6 h-6"><path d="M19,21H8V7H19M19,5H8A2,2 0 0,0 6,7V21A2,2 0 0,0 8,23H19A2,2 0 0,0 21,21V7A2,2 0 0,0 19,5M16,1H4A2,2 0 0,0 2,3V17H4V3H16V1Z" /></svg>
      </button>
    </div>
  </div>
  <div class="p-6 overflow-x-hidden">
    {% render example %}
  </div>
  {% render "code.liquid" tabs: tabs, collapse: collapse %}
</div>
