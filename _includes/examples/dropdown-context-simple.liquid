<div x-data="{ languages: ['english', 'swedish', 'korean', 'german', 'icelandic', 'japanese']}" class="flex justify-center my-6">
  <template x-for="language in languages">
    <div x-text="language" @contextmenu.prevent="$dispatch('open-contextmenu', {id: 'context', data: { language, languages }, $event })" class="mr-4 cursor-pointer border p-2 hover:bg-gray-50 dark:border-neutral-700 dark:hover:bg-neutral-700">
    </div>
  </template>
</div>

<div x-data="dropdownContext" id="context">
  <div x-bind="menu" x-cloak class="z-10">
    <div
      class="w-[320px] rounded-md border border-gray-200 bg-white shadow-md dark:border-neutral-700 dark:bg-neutral-800 dark:text-gray-300"
    >
      <ul>
        <li>
          <a x-text="'Set ' + contextData?.language" href="#" class="my-1 w-full px-6 py-3 pr-4 text-left text-sm text-gray-800 hover:bg-gray-100 focus:bg-violet-500 focus:text-white focus:outline-none dark:text-gray-300 dark:hover:bg-neutral-700 dark:focus:bg-violet-500 dark:focus:text-white block">
          </a>
        </li>
        <li>
          <a @click="contextData.languages.push('spanish')" href="#" class="my-1 w-full px-6 py-3 pr-4 text-left text-sm text-gray-800 hover:bg-gray-100 focus:bg-violet-500 focus:text-white focus:outline-none dark:text-gray-300 dark:hover:bg-neutral-700 dark:focus:bg-violet-500 dark:focus:text-white block">
            Add spanish
          </a>
        </li>
        <li>
        <a x-text="'Remove ' + contextData?.language" @click="contextData.languages.splice(contextData.languages.indexOf(contextData.language), 1)" href="#" class="my-1 w-full px-6 py-3 pr-4 text-left text-sm text-gray-800 hover:bg-gray-100 focus:bg-violet-500 focus:text-white focus:outline-none dark:text-gray-300 dark:hover:bg-neutral-700 dark:focus:bg-violet-500 dark:focus:text-white block"></a>
        </li>
      </ul>
    </div>
  </div>
</div>
